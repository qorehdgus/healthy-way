	}
	.routinList{
		margin:0 auto;
		width:90%;
		box-sizing:border-box;
		padding:10px;
		white-space:nowrap;	
	}
	.routinList>div{
		position:relative;
	}
	.prev,.next{
		background-color:black;
		position:absolute;
		width:5%;
		height:144px;
		line-height:144px;
		text-align:center;
		opacity:0.7;
		color:white;
		font-size:1.5em;
		z-index:1;
	}
	.prev{
		display:none;
	}
	.next{
		left:95%;
		display:inline-block;
	}
	.modulList{
		display:inline-block;
		position:relative;
		width:100%;
		height:144px;
		overflow:hidden;
	}
	.modulList::-webkit-scrollbar{
		display:none;
	}
	.routinModule{
		position:relative;
		left:0px;
		transition-duration:1s;
		display:inline-block;
		background-color:#ddd;
		width:140px;
		height:140px;
		overflow:hidden;
		margin-right:10px;
	}
	.routinModule>img{
		height:100%;
	}
	.graphSize{
		margin:0 auto;
		margin-top:20px;
	}
</style>

