<!-- chart.js 플러그인 -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- 도넛 그래프 -->
<script>
	$(()=>{	
		const data = {
				  datasets: [{
				    label: '목표 달성량',
				    data: [80,20],
				    backgroundColor: [
				      'rgb(255, 99, 132)',
				      '#ddd'
				    ],
				    hoverOffset: 3
				  }]
				};
		const config = {
				  type: 'doughnut',
				  data: data,
				  options: {
					  plugins: {
		  	    	    legend: {
			  	    	      display: false,
			  	    	    }
			  	    	  },
			  			responsive: false
			  			}
				};
		const myChart = new Chart(
  			    document.getElementById('circleGraph'),
  			    config
  			  );
	})
</script>
<!-- 막대 그래프 -->
<script>
$(()=>{	
	const data = {
	  labels: [
		    '나의 루틴1',
		    '나의 루틴2',
		    '나의 루틴3',
		    '나의 루틴4'
		  ],
	  datasets: [{
	    label: '운동 횟수',
	    data: [65, 59, 80, 81, 56, 55, 40],
	    backgroundColor: [
	    	'rgba(172, 167, 241, 0.5)'
	    ],
	    borderColor: [
	    	'rgba(226, 224, 250, 1)'
	    ],
	    borderWidth: 1
	  }]
	};
	const config = {
			  type: 'bar',
			  data: data,
			  
			  options: {
				  plugins: {
		  	    	    legend: {
		  	    	      display: false,
		  	    	    }
		  	    	  },
					responsive: false,
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero: true
							}
						}]
					},
				},
			};
	  const myChart = new Chart(
			    document.getElementById('barGraph'),
			    config
			  );
})
</script>
